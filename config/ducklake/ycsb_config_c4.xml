<?xml version="1.0"?>
<parameters>

    <!-- Connection details -->
    <type>DuckDB</type>
    <driver>org.duckdb.DuckDBDriver</driver>
    <url>jdbc:duckdb:./tpcc2.lake</url>
    <username></username>
    <password></password>
    <newConnectionPerTxn>false</newConnectionPerTxn>
    <sessionsetupfile>config/ducklake/setup_ducklake_ycsb.sql</sessionsetupfile>
    
    <!-- Scalefactor in YCSB is *1000 the number of rows in the USERTABLE-->
    <scalefactor>1</scalefactor>
    
    <!-- Optional: Override the zipfian constant to modify the skew -->
    <!-- <skewFactor>0.99</skewFactor> -->

    <!-- The workload -->
    <terminals>4</terminals>
    <works>
        <work>
            <time>600</time>
            <rate>unlimited</rate>
            <weights>100,0,0,0,0,0</weights>
        </work>
    </works>

    <!-- YCSB Procedures declaration -->
    <transactiontypes>
        <transactiontype>
            <name>ReadRecord</name>
        </transactiontype>
        <transactiontype>
            <name>InsertRecord</name>
        </transactiontype>
        <transactiontype>
            <name>ScanRecord</name>
        </transactiontype>
        <transactiontype>
            <name>UpdateRecord</name>
        </transactiontype>
        <transactiontype>
            <name>DeleteRecord</name>
        </transactiontype>
        <transactiontype>
            <name>ReadModifyWriteRecord</name>
        </transactiontype>
    </transactiontypes>
</parameters>
